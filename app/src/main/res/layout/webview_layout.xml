<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <EditText android:id="@+id/EditTextURL"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_weight="1.0" android:lines="1"
            />
        <Button android:id="@+id/URLSearchButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Go" />
    </LinearLayout>
    <WebView android:id="@+id/web" android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
