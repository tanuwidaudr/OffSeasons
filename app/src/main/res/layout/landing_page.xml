<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Welcome to"
            android:textColor="#FF5833"
            android:textSize="20sp"
            android:fontFamily="@font/segoesc"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="OFFSeasons"
            android:textColor="#334EFF"
            android:textSize="50sp"
            android:fontFamily="@font/segoesc"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="How Would You Like to Find Restaurants?"
            android:textColor="#FF5833"
            android:textSize="20sp"
            android:fontFamily="@font/segoesc"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- Name Button -->
    <Button
        android:id="@+id/landingPageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By Name"
        android:layout_weight="1"/>

    <!-- Category Button -->
    <Button
        android:id="@+id/landingPageCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By Category"
        android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
